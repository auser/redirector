{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch and Run",
      "type": "shell",
      "command": "cargo watch -x run",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "cargo test",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Check with Clippy",
      "type": "shell",
      "command": "cargo clippy",
      "problemMatcher": [
        "$rustc"
      ]
    }
  ]
}